/* pages/afterSale/afterSale.wxss */
page{
  background: #fff;
}
.afterSale{
    width: 662rpx;
    margin: 0 auto;
}
.aftersale_box{
    width: 100%;
    background: #fff;
    margin-bottom: 10rpx;
    padding-bottom: 30rpx;

}
.orderlaber{
    font-size: 26rpx;
    color: #393E46;
    font-weight: bolder;
    padding: 30rpx 0 24rpx 0;
    display: block;
}
.ordernum{
    font-weight: 400;
}
.orderlist{
    width: 100%;
    height: 200rpx;
    background:rgba(250,250,250,1);  
    display: flex;
    margin-bottom: 10rpx;
}
.order_left{
    width: 200rpx;
    height: 200rpx;
    background: #CACACA;
    float: left;
}
.order_left image{
    width: 190rpx;
    height: 84rpx;
    margin-left: 5rpx;
    margin-top: 54rpx;
}
.order_right{
    float: left;
    width:100%;

}
.order_right text{
    display: block;
}
.nameortype{
  position: relative;
  height: 62rpx;
  width: 100%;
}
.productName{
    font-size: 38rpx;
    margin-left: 30rpx;
    margin-top: 24rpx;
}
.describe{
    height: 60rpx;
    margin-left: 30rpx;
    font-size: 24rpx;
    color: #8F8F8F;
    clear: both;
}
.shoesPrice{
    margin: 0rpx 0 0 30rpx;
    font-size:46rpx;
    font-family:DINAlternate-Bold;
    font-weight:bold;
    color:rgba(204,0,0,1);
    display: inline-block !important;
  }
.shoesRmb{
    font-size: 20rpx;
    display: inline-block !important;
  }
  .title{
    font-size: 28rpx;

  }
  .cause{
    border: 1px solid #CACACA;
    width: 100%;
    height: 344rpx;
    margin-top: 24rpx;
  }
  .cause textarea{
    padding: 24rpx 24rpx 0 24rpx;
    height: 80rpx;
    font-size:20rpx;
  }
  .font_num{
    float: right;
    color: #393E46;
    font-size: 24rpx;
    margin-right: 24rpx;
    margin-bottom: 24rpx;
  }
  .line{
    width:614rpx;
    background:#E6E6E6;
    height:2rpx;
    display:block;
    clear:both;
    margin:0 auto;
  }

  .camera{
    margin: 47rpx 20rpx 0 24rpx;
  }

  .up_photo{
    width: 91rpx !important;
    height: 91rpx !important;
    float: left;
    margin-right: 24rpx;
  }
  .camera image{
    width: 68rpx;
    height: 68rpx;
  }

  .submitapply{
    width: 662rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    background: #000;
    margin-top: 86rpx;
  }


.mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.3;
}
.success{
    width: 508rpx;
    height: 292rpx;
    position: absolute;
    top: 403rpx;
    left: 50%;
    margin-left: -254rpx;
    background: #fff;
    border-radius: 4px;
}
.success image{
    width: 102rpx;
    height: 102rpx;
    margin-left: 203rpx;
    margin-top: 38rpx;

}
.messge{
    font-size: 32rpx;
    text-align: center;
    display: block;
}
.suggestion{
    font-size: 24rpx;
    color: #8F8F8F;
    text-align: center;
    margin-top: 20rpx;
}