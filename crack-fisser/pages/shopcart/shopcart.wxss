page {

  background-color: white;

}
.noproduct{
  width: 100%;
  height: 100%;
  position: relative;


}
.noproduct image{
  width: 140rpx;
  height: 140rpx;
  position: absolute;

  left: 50%;
  margin-top: 350rpx;
  margin-left: -70rpx;
}
.noproduct text{
  width: 100%;
  position: absolute;
  margin-top: 530rpx;
  color: #8F8F8F;
  font-size: 36rpx;
  text-align: center;
  font-weight:400;
}
.shopcart{
  width: 100%;
  height: 100%;
  position: relative;
}
.container {
  width:100%;
  min-height:260rpx;
  margin:0 auto;
  /* border-bottom:10rpx solid #fafafa; */


}
.touch-item {
  font-size: 14rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  border-bottom:10rpx solid #fafafa;
}
.touch-item:last-child{
  border: none;
  margin-bottom:10vh;

}
.content_box{
  width: 100%;
  /* padding:0 5%; */
  height: 260rpx;
}

.content {
  width: 115%;
  height: 260rpx;
  margin-top: 10rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90rpx);
  transform: translateX(90rpx);
  margin-left: -90rpx;
  display: flex;
  justify-content: baseline;
  padding:0 5%;

}
.shopcartbox_left{
  width: 10%;
  position: relative;
  margin-top: 30rpx;
}
.shopcartbox_left image{
  width:48rpx;
  height:48rpx;
  position:absolute;
  top:50%;
  left:35%;
  margin-left:-24rpx;
  margin-top:-24rpx;
}
.shopcartbox_right{
  width: 85%;
  height: 200rpx;
  display: flex;
  justify-content: baseline;
  margin-top: 30rpx;
  background: #FAFAFA;
}
.left_img{
  width: 200rpx;
  height: 200rpx;
  background: #CACACA;
}
.left_img image{
  width: 200rpx;
  height: 200rpx;
}
.right_text{
  font-size:38rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(52,52,55,1);
}
.right_text text{
  display: block;
}
.shoesName{
  margin: 20rpx 0 0 30rpx;
  color: #343437;
}
.shoesTexture{
  margin: 16rpx 0 0 30rpx;
  font-size:24rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(143,143,143,1);
  line-height:26rpx;
  height: 60rpx;
  /* padding-bottom: 34rpx; */
}
.shoesPrice{
  margin: 0rpx 0 0 30rpx;
  font-size:46rpx;
  font-family:DINAlternate-Bold;
  font-weight:bold;
  color:rgba(204,0,0,1);
  display: inline-block !important;
}
.shoesRmb{
  font-size: 20rpx;
  display: inline-block;
}
.del {
  background-color: #CC0000;
  width: 100rpx;
  height: 200rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90rpx);
  transform: translateX(90rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  padding-right:7rpx;
}
.confirm_del{
  font-size: 28rpx;
  width: 64rpx;
  text-align: center;
}

.deleteimg{
  width: 48rpx;
  height: 48rpx;
  margin-left:-5rpx;

}

.total{
  width: 100%;
  height: 125rpx;
  background: #FFF;
  position: fixed;
  bottom: 0;
}
.total_left{
  float: left;
  width: 50%;
  height: 125rpx;
  position: relative;
  border-top: 1px solid #E6E6E6;
  box-sizing: border-box;
}
.total_right{
  float: right;
  width: 50%;
  font-size: 38rpx;
  color: #fff;
  text-align: center;
  line-height: 125rpx;
}
.total_left image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 48rpx;
  top: 50%;
  margin-top: -20rpx;
  /* margin-right: 10rpx; */
}
.total_left .check_all{
  position: absolute;
  line-height: 125rpx;
  font-size: 20rpx;
  color: #343437;
  left: 100rpx;
}
.total_left .check_all .heji{
  font-size: 24rpx;
  margin-left: 22rpx
  
}
.pricenum{
  font-weight: bolder;
  font-size: 24rpx;
}
.childname{
  font-size: 20rpx;
}
.touch-move-active .content,.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}